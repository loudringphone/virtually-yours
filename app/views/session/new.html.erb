<div class="login-container">
    <p class='error'>
        <%= flash[:error] %>  
    </p>
    <%= form_tag login_path do %>
        <%= label_tag :email, 'email:' %>
        <%= email_field_tag :email %>
    
        <%= label_tag :password, 'password:' %>
        <%= password_field_tag :password %>
        <br>
        <%= submit_tag "login", :class=>"btn-blue" %>

    <% end %>
</div>