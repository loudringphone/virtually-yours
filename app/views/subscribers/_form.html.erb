<%= form_for @subscriber do |f| %>
    <%= f.label :email, "Email:", :required => true, class: "labelSignup" %>
    <%= f.text_field :email, placeholder: "Email*" %>
    <br>
    <br>
    <%= f.label :first_name, "First name:", :required => true, class: "labelSignup"  %>
    <%= f.text_field :first_name, placeholder: "First name*" %>
    <br>
    <br>
    <%= f.label :last_name, "Last name:", :required => true, class: "labelSignup" %>
    <%= f.text_field :last_name, placeholder: "Last name*" %>
    

    <div class="subscription-field" style="visibility: hidden;">
        <%= f.label :subscription, "Subscription:", :required => true %>
        <%= f.hidden_field :subscription, value: "Daily Deal, Red Matter 2, Audioshield"  %>
    </div>

    <figure>
    <img src="https://res.cloudinary.com/dspewejua/image/upload/v1676869215/IMAGE_2023-02-20_11_07_51_1_md5kp1.png" alt="daily deal">
    <div class='selector'><div class='subselector dailydeal'>Unselect this newsletter</div> <div class='subselector dailydealMinus'>-</div></div>
</figure>

<figure>
    <img src="https://res.cloudinary.com/dspewejua/image/upload/v1676869209/IMAGE_2023-02-20_11_09_11_1_rtsrqa.png" alt="red matter 2">
    <div class='selector'><div class='subselector redmatter2'>Unselect this newsletter</div> <div class='subselector redmatter2Minus'>-</div></div>
</figure>
</figure>
<figure>
    <img src="https://res.cloudinary.com/dspewejua/image/upload/v1676869202/IMAGE_2023-02-20_11_10_41_1_jhbajx.png" alt="audioshield">
    <div class='selector'><div class='subselector audioshield'>Unselect this newsletter</div> <div class='subselector audioshieldMinus'>-</div></div>
</figure>


    <%= f.submit "Subscribe" %>

<% end %>