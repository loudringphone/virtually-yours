<%= form_for @subscriber do |f| %>
    <%= f.label :first_name, "First name:", :required => true %>
    <%= f.text_field :first_name %>
    <br>
    <br>
    <%= f.label :last_name, "Last name:", :required => true %>
    <%= f.text_field :last_name %>
    <br>
    <br>
    <%= f.label :email, "Email:", :required => true %>
    <%= f.text_field :email %>

    <div class="subscription-field" style="visibility: hidden;">
        <%= f.label :subscription, "Subscription:", :required => true %>
        <%= f.hidden_field :subscription, value: "Daily Deal, Red Matter 2, Audioshield"  %>
    </div>
    <%= f.submit "Subscribe" %>

<% end %>