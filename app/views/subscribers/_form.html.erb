<%= form_for @subscriber do |f| %>
    <%= f.label :first_name, "First name:", :required => true %>
    <%= f.text_field :first_name %>
    <br>
    <br>
    <%= f.label :last_name, "Last name:", :required => true %>
    <%= f.text_field :last_name %>
    <br>
    <br>
    <%= f.label :email, "Email:", :required => true %>
    <%= f.text_field :email %>
    <br>
    <br>
    <%= f.label :subscription, "Subscription:", :required => true %>
    <%= f.text_field :subscription %>
    <br>
    <br>
    <br>
    <%= f.submit %>

<% end %>